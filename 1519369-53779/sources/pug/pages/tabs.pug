extends  ../_skeleton

//- Includes

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Tabs'

block page 
	// Page Header
	include ../sections/_header-minimal

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	})

	// Tabs
	section.section.section-lg.section-wave-offset
		.container
			.row
				.col-sm-10.col-md-9.col-lg-6.col-xl-5
					h6 Standard tabs
					// Bootstrap tabs 
					#tabs-1.tabs-custom.tabs-horizontal.tabs-line
						// Nav tabs
						ul.nav.nav-tabs
							li.nav-item(role='presentation'): a.nav-link.active(href='#tabs-1-1' data-toggle='tab') Description
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-1-2' data-toggle='tab') Demands
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-1-3' data-toggle='tab') Conditions

						// Tab panes
						.tab-content
							div#tabs-1-1.tab-pane.fade.show.active
								p Praesent aliquet volutpat blandit. Ut tellus arcu, scelerisque sed posuere a, posuere non eros.
								p Maecenas nulla lectus, tristique eu enim non, fringilla scelerisque nulla. Nulla imperdiet accumsan massa. Aliquam interdum tellus placerat risus ullamcorper ornare.

							div#tabs-1-2.tab-pane.fade
								ul.list-marked
									li Etiam pretium ornare felis, in efficitur augue semper laoreet
									li Cras nec mi scelerisque, cursus mi id, iaculis libero nullam gravida ante sit amet ipsum finibus
									li Duis ornare lorem urna. Integer vitae euismod magna vestibulum at congue odio

							div#tabs-1-3.tab-pane.fade
								ul.list-marked
									li Quisque nibh justo, maximus quis tempor id
									li Nullam porttitor consequat elit, non maximus nisl pharetra nec mauris eu malesuada neque
									li Etiam massa mi, pretium et arcu vitae, elementum elementum tellus vestibulum id magna metus.
								
	// Page Footer
	include ../sections/_footer-standard
