section.swiper-container.swiper-slider.swiper-slider-light(
data-loop='true'
data-autoplay='false'
data-simulate-touch='false'
data-custom-slide-effect='inter-leave-effect'
data-inter-leave-offset='-.5'
)
	.swiper-wrapper
		.swiper-slide(data-slide-bg='images/slider-light-slide-1-1920x776.jpg'): .slide-inner
			.container: .swiper-slide-caption
				h1.wow-outer
					span.font-weight-light.wow-outer: span.wow(data-caption-animate='slideInDown') Do You Need
					span.font-weight-bold.wow-outer: span.wow(data-caption-animate='slideInDown' data-wow-delay='0') an Accountant?
				.wow-outer.button-outer: a.button.button-lg.button-primary.button-winona.wow(href='#' data-caption-animate='slideInDown' data-wow-delay='.2s') Free consultation

		.swiper-slide(data-slide-bg='images/slider-light-slide-2-1920x776.jpg'): .slide-inner
			.container: .swiper-slide-caption
				h1.wow-outer
					span.font-weight-light.wow-outer: span.wow(data-caption-animate='slideInDown') Your Personal
					span.font-weight-bold.wow-outer: span.wow(data-caption-animate='slideInDown' data-wow-delay='0') Online Accountant
				.wow-outer.button-outer: a.button.button-lg.button-primary.button-winona.wow(href='#' data-caption-animate='slideInDown' data-wow-delay='.2s') Free consultation

		.swiper-slide(data-slide-bg='images/slider-light-slide-3-1920x776.jpg'): .slide-inner
			.container: .swiper-slide-caption
				h1.wow-outer
					span.font-weight-light.wow-outer: span.wow(data-caption-animate='slideInDown') Be Sure You Are
					span.font-weight-bold.wow-outer: span.wow(data-caption-animate='slideInDown' data-wow-delay='0') On the Right Way
				.wow-outer.button-outer: a.button.button-lg.button-primary.button-winona.wow(href='#' data-caption-animate='slideInDown' data-wow-delay='.2s') Free consultation

	.swiper-pagination-outer.container
		.swiper-pagination.swiper-pagination-modern.swiper-pagination-marked(data-index-bullet='true')
